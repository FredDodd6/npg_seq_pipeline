#!/usr/bin/env perl

# $Id: npg_pipeline_harold_analysis_runner 16979 2013-04-08 10:03:18Z mg8 $
# Created By: ajb
# Last Maintained By: $Author: mg8 $
# Created On: 2009-09-14
# Last Changed On: $Date: 2013-04-08 11:03:18 +0100 (Mon, 08 Apr 2013) $
# $HeadURL: svn+ssh://svn.internal.sanger.ac.uk/repos/svn/new-pipeline-dev/npg-pipeline/trunk/bin/npg_pipeline_harold_analysis_runner $

use strict;
use warnings;
use FindBin qw($Bin);
use lib ( -d "$Bin/../lib/perl5" ? "$Bin/../lib/perl5" : "$Bin/../lib" );
use English qw{-no_match_vars};
use Readonly;
use npg_pipeline::daemons::harold_analysis_runner;

our $VERSION = do { my ($r) = q$LastChangedRevision: 16979 $ =~ /(\d+)/mxs; $r; };
Readonly::Scalar our $SLEEPY_TIME => 900;

my $runner = npg_pipeline::daemons::harold_analysis_runner->new();
while (1) {
  eval {
    $runner->run();
  } or do {
    $runner->log( q{Error running harold_analysis_runner: } . $EVAL_ERROR . q{ - Going to sleep} );
  };
  sleep $SLEEPY_TIME;
}
0;

__END__

=head1 NAME

npg_pipeline_archival_runnner

=head1 VERSION

$LastChangedRevision: 16979 $

=head1 SYNOPSIS

=head1 DESCRIPTION

Script to run as a Daemon which will interrogate npg for runs which have a status of analysis_pending, and then
fire off analysis pipeline for each

